[Unit]
Description=Peekaboo exposes hardware info as HTTP REST
ConditionFileIsExecutable=/usr/bin/peekaboo
Wants=network.target network-online.target
After=network.target network-online.target

[Service]
Type=oneshot
ExecStart=/usr/bin/peekaboo
TimeoutSec=0
StandardOutput=tty
RemainAfterExit=yes
SysVStartPriority=99

[Install]
WantedBy=multi-user.target
